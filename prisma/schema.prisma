generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Product {
  id            Int      @id @default(autoincrement())
  name          String
  description   String
  price         Float
  category      String
  stock         Int
  cartProducts  CartProduct[]
  createdAt     DateTime @default(now())

  @@map("products")
}

model ShoppingCart {
  id            Int      @id @default(autoincrement())
  cartProducts  CartProduct[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime

  @@map("shopping_cart")
}


model CartProduct {
  cart_id     Int
  product_id  Int
  quantity    Int
  price       Float

  ShoppingCart ShoppingCart @relation(fields: [cart_id], references: [id])
  Product      Product      @relation(fields: [product_id], references: [id])

  @@id([cart_id, product_id])

  @@map("cart_products")
}

